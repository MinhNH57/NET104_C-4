@{
    ViewData["Title"] = "Poducts";
}

@model IEnumerable<SD18406.Models.Catregory>;
<div class="card mt-3">
    <div class="card-header">
        <h2>CATEGORY LIST</h2>
    </div>
    <div class="text-end mx-5 mt-3">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new category</a>
    </div>

    <div class="card-body">   
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.ID)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                    <th>@Html.DisplayNameFor(Model => Model.SoLuong)</th>
                    <th>@Html.DisplayNameFor(Model => Model.ImgURL)</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var catenary in Model)
                    {
                <tr>
                    <td class="text-center">@catenary.ID</td>
                    <td class="text-center">@catenary.Name</td>
                    <td class="text-center">@catenary.SoLuong</td>
                    <td class="text-center" style="width:50px">
                        <img src="~/Img/60616508_121184042420057_7026099805109616640_o_121184039086724.jpg" width="auto" />
                    </td>

                    <td class="text-center">
                    <button class="img-thumbnail btn-info">Update</button>
                            <div class="d-flex justify-content-center">
                                <form asp-controller="Category" asp-action="Delete" asp-route-id="@catenary.ID" method="post">
                                    <button type="submit" class=" btn btn-danger">Delete</button>
                                </form>
                                <a class="btn - btn-warning mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@catenary.ID">Update</a>
                            </div>
                    </td>
                </tr>
                    }
            </tbody>
        </table>
    </div>



