@model SD18406.Models.Catregory

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card px-5">
        <div class="card-body mt-2">
            <form asp-action="Edit" style=" padding: 0 10rem 0;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ID" class="control-label">ID</label>
                    <input asp-for="ID" class="form-control" disabled />
                    <span asp-validation-for="ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label">Display Order</label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImgURL" class="control-label">Display Order</label>
                    <input asp-for="ImgURL" class="form-control" />
                    <span asp-validation-for="ImgURL" class="text-danger"></span>
                </div>
                <div class="form-group mt-5 text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
