@{
    ViewData["Title"] = "Update a product";
}

@model Product

<div class="container-fluid">
    <div class="card">

        <div class="card-body">

            <form method="post" class="container" enctype="multipart/form-data">
                <div>
                    <div class="row pb-2 text-center">
                        <h2 class="text-primary">create category</h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-sm-12 col-md-6">
                        <label asp-for="ID">ID</label>
                        <input asp-for="ID" class="form-control" />
                    </div>

                    <div class="col-6 col-sm-12 col-md-6">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div>
                    <label asp-for="SoLuong">So luong</label>
                    <input asp-for="SoLuong" class="form-control" />
                </div>

                <div>
                    <label asp-for="ImgUrl">Img URL</label>
                    <input type="file" name="imgFile" class="form-control" />
                    <input type="hidden" asp-for="ImgUrl"/>
                </div>

                <button type="submit" class="btn btn-primary mt-2">submit</button>
            </form>

        </div>

    </div>
</div>