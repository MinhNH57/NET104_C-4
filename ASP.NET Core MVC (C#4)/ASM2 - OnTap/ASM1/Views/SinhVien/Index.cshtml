@model IEnumerable<ASM1.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

@{
    ViewData["Title"] = "Index";
    var lopHocs = ViewBag.LopHocs as Dictionary<string, string>;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLop)
            </th>
            <th>
                LopHoc
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>
                <td>
                    @lopHocs[item.MaLop]
                </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                <form method="post" asp-action="Delete" asp-controller="SinhVien" asp-route-id ="@item.ID" style="display:inline;">
                      <button class ="btn btn-outline-dark" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
